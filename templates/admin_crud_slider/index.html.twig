{% extends 'base.html.twig' %}

{% block title %}Hello AdminCrudSliderController!{% endblock %}

{% block body %}
<h1 class="text-center">Admin slider</h1>

	{% for label, msgs in app.flashes %}
		{% for msg in msgs %}
			<div class="alert alert-{{ label }} text-center">
				{{ msg }}
			</div>

		{% endfor %}
	{% endfor %}
	<a href="{{ path('admin_crud_slider_new') }}" class="btn btn-success my-3">Ajouter un slider</a>

	<table class="table table-bordered text-center">
		<thead>
			<tr>
				{% for data in colonnes %}
					{% if data != "id" %}
						<th>{{ data }}</th>
					{% endif %}
				{% endfor %}
				<th>Editer / Supprimer</th>
			</tr>
		</thead>
		<tbody>
			{% for data in slds %}
				<tr>
					
					<td>{{ data.photo }}€</td>
					<td>{{ data.ordre }}</td>
					<td>{{ data.dateEnregistrement|date('d/m/Y à H:i:s') }}</td>
					<td>
						<a href="{{ path('admin_crud_slider_edit', {'id': data.id}) }}" class="text-dark">
							<i class="fas fa-edit fa-lg"></i>
						</a>

						<a onclick="return confirm('Voulez-vous supprimer ce slider ?')" href="{{ path('admin_crud_slider_delete', {'id': data.id}) }}" class="text-dark">
							<i class="fas fa-trash-alt fa-lg"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>

	</table>
{% endblock %}
